#!/usr/bin/env node
var sys = require('sys'),
    platoon = require('platoon'),
    fs = require('fs'),
    http = require('http');

var filename = process.argv[2] || 'files.json';
fs.readFile(filename, function(err, data) {
    if(err) {
        sys.puts("Could not find "+filename);
    } else {
        var json = JSON.parse(data.toString());
        http.createServer(platoon.server(json)).listen(8124);
    }
});

